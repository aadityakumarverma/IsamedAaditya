<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:id="@+id/ll_visit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_cptCode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="CPT Code"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tv_cptCodeValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="51784"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/description"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tv_descriptionValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="ELECTROMYOGRAPHY STUDIES (EMG) OF ANAL OR URETHRAL SPHINCTER,"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_fees"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_fees"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/fees"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tv_feesValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="500"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_unit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_unit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="Unit"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_weight="1.2"
            android:id="@+id/et_unitValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="1"
            android:singleLine="true"
            android:inputType="number"
            android:maxLength="30"
            android:paddingHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:background="@drawable/small_edit_text_background"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_modifier"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_modifier"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="Modifier"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_weight="1.2"
            android:id="@+id/et_modifierValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:maxLength="30"
            android:inputType="textCapSentences"
            android:paddingHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:background="@drawable/small_edit_text_background"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_tos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_tos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="TOS"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <EditText
            android:layout_weight="1.2"
            android:id="@+id/et_tosValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="30"
            android:paddingHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/helvetica"
            android:background="@drawable/small_edit_text_background"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_icd1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_10sdp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:weightSum="7"
        >
        <TextView
            android:layout_weight="2.8"
            android:id="@+id/tv_icd1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="ICD-1"
            android:lines="1"
            android:gravity="center_vertical|start"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
        <TextView
            android:layout_weight="3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="@string/colon"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />

        <TextView
            android:layout_weight="1.2"
            android:id="@+id/tv_icd1Value"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helvetica"
            android:text="R87.610"
            android:textSize="@dimen/_10sdp"
            android:textColor="@color/black"
            />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_10sdp"
        android:background="@color/separator_color"
        />

</LinearLayout>
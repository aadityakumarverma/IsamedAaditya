<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ui.activities.PatientFullDetailsActivity">


    <FrameLayout
        android:id="@+id/fl_patientAllDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/hsv_bottomTabs"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <HorizontalScrollView
        android:id="@+id/hsv_bottomTabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        <LinearLayout
            android:weightSum="4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:id="@+id/ll_infoTab"
                android:layout_weight="1"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_infoTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/info_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_infoTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Info"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_AppointmentTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_AppointmentTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/appointment_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_AppointmentTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Appointments"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_docTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_docTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/doc_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_docTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Doc"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_labOrderTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_labOrderTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/lab_ord_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_labOrderTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="@string/lab_order"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_testResultTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_testResultTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/test_result_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_testResultTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Test Results"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_prescriptionTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_prescriptionTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/prescription_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_prescriptionTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Prescription"
                    />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_paymentTab"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:paddingVertical="@dimen/_5sdp"
                android:background="@drawable/tab_selector"
                android:orientation="vertical"
                >
                <ImageView
                    android:id="@+id/iv_paymentTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:src="@drawable/pay_icon_gray"
                    />
                <TextView
                    android:id="@+id/tv_paymentTab"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    android:lines="1"
                    android:fontFamily="@font/helvetica"
                    android:layout_gravity="center_horizontal"
                    android:paddingHorizontal="@dimen/_2sdp"
                    android:text="Payment"
                    />
            </LinearLayout>

        </LinearLayout>

    </HorizontalScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>